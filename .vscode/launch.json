    "version": "0.2.0",
    "configurations": [

      {
        "type": "node",
        "request": "launch",
        "name": "Launch Program",
        "sourceMaps": true,
        "stopOnEntry": true,
        "console": "internalConsole",
        "cwd": "${workspaceRoot}",
        "program": "${workspaceFolder}/src/index.ts",
        "envFile": "${workspaceFolder}/.env",
        "preLaunchTask": "tsc: build - tsconfig.json",
        "outFiles": ["${workspaceFolder}/lib/**/*.js"]
      }
    ]
  }